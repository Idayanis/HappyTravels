<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Name of the Place"
                    android:textAlignment="center"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="normal|bold"
                    android:padding="@dimen/text_padding" />

                <ImageView
                    android:id="@+id/coverPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cover_height"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/place11"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:id="@+id/actionButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/callImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/ic_phone_black_24dp" />

                    <ImageButton
                        android:id="@+id/emailImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/ic_email_black_24dp" />

                    <ImageButton
                        android:id="@+id/webImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/ic_web_black_24dp" />

                    <ImageButton
                        android:id="@+id/locationImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/ic_location_on_black_24dp" />

                    <ImageButton
                        android:id="@+id/photoImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/ic_collections_black_24dp" />

                    <ImageButton
                        android:id="@+id/shareImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/ic_share_black_24dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_padding"
                    android:text="Description of the place"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/timingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_padding"
                    android:text="Timing"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_padding"
                    android:text="Location"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_padding"
                    android:text="Phone Number"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_padding"
                    android:text="Email Address"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/webPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_padding"
                    android:text="Web Page"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>
